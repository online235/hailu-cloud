<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hailu.cloud.api.basic.module.dict.dao.SysDictMapper">

	<!-- 根据code和value查询字典项 -->
	<select id="find" resultType="com.hailu.cloud.common.model.dict.SysDictModel">
		select
			id,
			`code`,
			`desc`,
			`name`,
			`value`
		from
			sys_dict
		where `code` = #{code}
		and `value` = #{value}
	</select>

	<!-- 返回所有字典 -->
	<select id="findAll" resultType="com.hailu.cloud.common.model.dict.SysDictModel">
		select
			`code`,
			`name`,
			`value`
		from sys_dict
	</select>

	<!-- 添加字典项 -->
	<insert id="addDict">
		insert into sys_dict(id, `code`, `desc`, `name`, `value`)
		values(#{id}, #{code}, #{desc}, #{name}, #{value})
	</insert>

</mapper>